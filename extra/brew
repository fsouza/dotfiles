function find_brew {
	local paths=(/opt/homebrew/bin/brew /usr/local/bin/brew /home/linuxbrew/.linuxbrew/bin/brew)
	for path in ${paths[@]}; do
		if [ -x ${path} ]; then
			echo ${path}
			return 0
		fi
	done
}

function __setup_brew {
	local brew_path=$(find_brew)
	if [ -n "${brew_path}" ]; then
		eval "$(env -u HOMEBREW_SHELLENV_PREFIX ${brew_path} shellenv)"

		export HOMEBREW_NO_ENV_HINTS=1
		export HOMEBREW_NO_EMOJI=1

		prepend_to_path \
			${HOMEBREW_PREFIX}/opt/coreutils/libexec/gnubin \
			${HOMEBREW_PREFIX}/opt/curl/bin \
			${HOMEBREW_PREFIX}/opt/python@3.11/bin

		cond_source ${HOMEBREW_PREFIX}/etc/profile.d/bash_completion.sh
	fi
}

__setup_brew
