function find_brew {
	local paths=(/opt/homebrew/bin/brew /usr/local/bin/brew)
	for path in "${paths[@]}"; do
		if [ -x "${path}" ]; then
			echo "${path}"
			return 0
		fi
	done
}

brew_path=$(find_brew)
if [ -n "${brew_path}" ]; then
	eval "$(env -u HOMEBREW_SHELLENV_PREFIX "${brew_path}" shellenv)"

	export HOMEBREW_NO_ENV_HINTS=1
	export HOMEBREW_NO_EMOJI=1
	export HOMEBREW_NO_GITHUB_API=1

	prepend_to_path "$(brew --prefix)"/opt/coreutils/libexec/gnubin
fi
