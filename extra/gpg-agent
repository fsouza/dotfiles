[ -f ~/.gpg-agent-info ] && source ~/.gpg-agent-info

if [ -S "${GPG_AGENT_INFO%%:*}" ]; then
	export GPG_AGENT_INFO
	export SSH_AUTH_SOCK
	export SSH_AGENT_PID
else
	rm -f ~/.gpg-agent.log
	eval $(gpg-agent --daemon --enable-ssh-support --disable-scdaemon --log-file ~/.gpg-agent.log --pinentry-program $(which pinentry) --write-env-file ~/.gpg-agent-info)
fi
