if command -v fd &>/dev/null; then
	export FZF_DEFAULT_COMMAND="fd --type f"
fi

export FZF_DEFAULT_OPTS='--color=light,prompt:232,marker:232,pointer:232,hl:236,hl+:232'

# ensure fzf completion and key-bindings is configured.
if [[ -v HOMEBREW_PREFIX ]] && [ -x "${HOMEBREW_PREFIX}/opt/fzf/install" ]; then
	"${HOMEBREW_PREFIX}/opt/fzf/install" --no-update-rc --key-bindings --completion --xdg &>/dev/null
fi

cond_source "${HOME}/.config/fzf/fzf.zsh"
