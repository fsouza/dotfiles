function ntfs_mount() {
	base_dst="/Volumes/win"
	dst=$base_dst
	count=0
	while [ -d $dst ]
	do
		count=$((count + 1))
		dst=$base_dst$count
	done
	sudo mkdir $dst
	sudo mount -t ntfs -o rw,auto,nobrowse $1 $dst && echo "Mounted: ${dst}"
}

function jdk8 {
	jdk=$(ls -d /Library/Java/JavaVirtualMachines/jdk1.8.0_* | sort | tail -1)
	export JAVA_HOME=$jdk/Contents/Home/
}
