function _go_to_tmux {
	if command tmux has-session; then
		command tmux -f $HOME/.config/tmux.conf attach
	else
		command tmux -f $HOME/.config/tmux.conf new
	fi
}

function tmux {
	if [ -z "${1}" ]; then
		_go_to_tmux
	else
		command tmux $@
	fi
}

if [ -z "$TMUX" ] && [ -n "$(which tmux)" ] && [[ $- =~ i ]]; then
	_go_to_tmux
fi
