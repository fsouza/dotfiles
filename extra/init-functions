function cond_source {
	[ -s "${1}" ] && source "${1}"
}

function prepend_to_path {
	for dir in $@; do
		if [ -d "$dir" ]; then
			PATH=$dir:$PATH
		fi
	done
	export PATH
}

function append_to_path {
	for dir in $@; do
		if [ -d "$dir" ]; then
			PATH=$PATH:${dir}
		fi
	done
	export PATH
}

function realpath {
	local resolved=$(readlink "${1}")
	if [ -n "${resolved}" ]; then
		realpath "${resolved}"
	else
		echo "${1}"
	fi
}
