function cg {
	pt -eNUf --hidden --nogroup --color-match '1;31' --color-line-number '0;0' --color-path '0;0' --ignore .git --ignore .hg --ignore .svn --ignore Godeps --ignore _build "$@"
}

function g {
	cg --nocolor "$@"
}

function ig {
	g -i "$@"
}

function gimme {
	if [ -z "$1" ]; then
		echo "Please provide the go version"
		return 1
	fi
	GIMME=$(which gimme)
	if [[ $1 =~ ^- ]]; then
		${GIMME} "${1}"
	else
		if [ "$1" = "tip" ] && [ -n "$GIMME_TYPE" ]; then
			old_gimme_type=$GIMME_TYPE
			unset GIMME_TYPE
		fi
		eval "$(${GIMME} ${1})"
		if [ -n "$old_gimme_type" ]; then
			export GIMME_TYPE=$old_gimme_type
			unset old_gimme_type
		fi
	fi
}

function git_config {
	email=$1
	if [ -z "$email" ]; then
		echo "Please provide the email"
		return 1
	fi
	if [ -z "$GITNAME" ]; then
		echo "Please define the GITNAME environment variable with your name"
		return 1
	fi
	git config user.name "$GITNAME"
	git config user.email $email
	git config user.signingkey $email
}

alias jq='\jq -M'
