{
  "diagnostic.errorSign": "≫ ",
  "diagnostic.hintSign": "≫ ",
  "diagnostic.infoSign": "≫ ",
  "diagnostic.warningSign": "≫ ",
  "diagnostic.messageDelay": 0,
  "diagnostic.messageTarget": "echo",
  "signature.enable": true,
  "signature.hideOnTextChange": true,
  "signature.triggerSignatureWait": 50,
  "suggest.autoTrigger": "none",
  "languageserver": {
    "bash": {
      "command": "vim-nodels",
      "args": [
        "bash-language-server",
        "start",
      ],
      "filetypes": [
        "sh",
        "zsh",
      ],
    },
    "clangd": {
      "command": "vim-clangd",
      "args": [
        "--background-index",
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/",
        ".hg/",
      ],
      "filetypes": [
        "c",
        "cpp",
      ],
    },
    "css": {
      "command": "vim-nodels",
      "args": [
        "css-languageserver",
        "--stdio",
      ],
      "filetypes": [
        "css",
      ],
    },
    "dockerfile": {
      "command": "vim-nodels",
      "args": [
        "docker-langserver",
        "--stdio",
      ],
      "filetypes": [
        "dockerfile",
      ],
    },
    "fsharp": {
      "command": "vim-fsls",
      "filetypes": [
        "fsharp",
      ],
    },
    "gopls": {
      "command": "gopls",
      "disableCompletionSnippets": true,
      "rootPatterns": [
        "go.mod",
      ],
      "filetypes": [
        "go",
      ],
      "initializationOptions": {
        "staticcheck": true,
      },
    },
    "html": {
      "command": "vim-nodels",
      "args": [
        "html-langserver",
        "--stdio",
      ],
      "filetypes": [
        "html",
      ],
    },
    "merlin-lsp": {
      "command": "ocamlmerlin-lsp",
      "filetypes": [
        "ocaml",
      ],
    },
    "python": {
      "command": "python",
      "args": [
        "-m",
        "pyls",
      ],
      "filetypes": [
        "python",
      ],
    },
    "reason": {
      "command": "vim-rels",
      "filetypes": [
        "reason",
      ],
    },
    "rust": {
      "command": "rls",
      "filetypes": [
        "rust",
      ],
      "rootPatterns": [
        "Cargo.toml",
      ],
    },
    "vim": {
      "command": "vim-nodels",
      "args": [
        "vim-language-server",
        "--stdio",
      ],
      "filetypes": [
        "vim",
      ],
    },
    "yaml": {
      "command": "vim-yls",
      "filetypes": [
        "yaml",
      ],
    },
  },
}
