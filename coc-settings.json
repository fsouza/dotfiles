{
  "codeLens.enable": true,
  "diagnostic.errorSign": "≫ ",
  "diagnostic.hintSign": "≫ ",
  "diagnostic.infoSign": "≫ ",
  "diagnostic.messageDelay": 0,
  "diagnostic.messageTarget": "echo",
  "diagnostic.warningSign": "≫ ",
  "signature.enable": true,
  "signature.triggerSignatureWait": 50,
  "suggest.autoTrigger": "none",
  "languageserver": {
    "bash": {
      "command": "vim-nodels",
      "args": ["bash-language-server", "start"],
      "filetypes": ["sh"]
    },
    "css": {
      "command": "vim-nodels",
      "args": ["css-languageserver", "--stdio"],
      "filetypes": ["css"]
    },
    "gopls": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git"],
      "filetypes": ["go", "gomod"],
      "initializationOptions": {
        "deepCompletion": false,
        "staticcheck": true,
        "analyses": {
          "unusedparams": true,
          "ST1000": false
        }
      }
    },
    "html": {
      "command": "vim-nodels",
      "args": ["html-langserver", "--stdio"],
      "filetypes": ["html"]
    },
    "ocaml-lsp": {
      "command": "vim-ocaml-lsp",
      "filetypes": ["ocaml"]
    },
    "python": {
      "command": "python",
      "args": ["-m", "pyls"],
      "filetypes": ["python"],
      "settings": {
        "pyls": {
          "enable": true,
          "plugins": {
            "jedi_completion": {
              "enabled": true,
              "include_params": false,
              "fuzzy": true
            }
          }
        }
      }
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "yaml": {
      "command": "vim-yls",
      "filetypes": ["yaml"]
    }
  }
}
