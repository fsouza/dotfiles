root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_line = true
trim_trailing_whitespace = true

[*.{bazel,bzl,d,elm,fs,proto,ps1,py,rs,rst,tl,ts,zig}]
indent_style = space
indent_size = 4

[{BUILD,setup.cfg,Tiltfile}]
indent_style = space
indent_size = 4

[*.{atd,chpl,cr,erb,erl,ex,exs,f90,jsonnet,lua,ml,mli,mll,mly,pony,rb,re,rei,rkt,scala,scm,sls,sml,tf,tfstate,toml,yaml,yml}]
indent_style = space
indent_size = 2

[dune]
indent_style = space
indent_size = 1
