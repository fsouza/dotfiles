#!/usr/bin/env bash

set -euo pipefail

file_name=$(basename "${1}")
base_name=${file_name%.*}

function get_type() {
	case ${1} in
	BUILD)
		echo "build"
		;;
	WORKSPACE)
		echo "workspace"
		;;
	*)
		echo "default"
		;;
	esac
}

exec "${NVIM_CACHE_DIR}"/langservers/bin/buildifier --lint=fix --warnings=all --type="$(get_type "${base_name}")"
