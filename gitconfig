	useConfigOnly = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[core]
	editor = nvim
	excludesfile = ~/.config/git/gitignore
	filemode = true
[diff]
	compactionHeuristic = 1
	indentHeuristic = 1
[color]
	ui = false
[status]
	short = true
	branch = true
[help]
	autocorrect = -1
[format]
	pretty = medium
[push]
	default = current
[pull]
	rebase = true
[rebase]
	autoStash = true
[credential]
	helper = !zsh -c 'exec ${HOMEBREW_PREFIX}/opt/git/libexec/git-core/git-credential-netrc get'
[fetch]
