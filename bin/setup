#!/bin/zsh -e

# This script setups this repository, intializing the submodules, setting up
# symlinks and copying any required files.

os=$(uname -s)
basedir=$(
	cd $(dirname $0)/..
	pwd -P
)

pushd $basedir
git submodule update --init --recursive
popd

files=(.zshrc .editorconfig)
for file in $files; do
	ln -sf ${basedir}/${file} ~/${file}
done

mkdir -p ${HOME}/.config
xdg_files_and_dirs=(tmux.conf tmux.${os}.conf alacritty.yml rgrc git broot fd utop)
for item in $xdg_files_and_dirs; do
	ln -sf ${basedir}/${item} ${HOME}/.config/${item}
done

mkdir -p ~/.gnupg
chmod 700 ~/.gnupg
ln -sf ${basedir}/gpg.conf ~/.gnupg/gpg.conf

if [ -f $basedir/bin/${os}-setup ] && [[ $1 != "--skip-os" ]]; then
	$basedir/bin/${os}-setup
fi

touch "${HOME}"/.zsh_sessions_disable
